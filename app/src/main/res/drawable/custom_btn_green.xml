<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ff228003" />
            <gradient  android:angle="-90"  android:startColor="#ff12a11f" android:endColor="#ff09dd0d"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ff228003" />
            <solid  android:color="#ff09dd0d"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ff228003" />
            <gradient  android:angle="-90"  android:startColor="#ff5aff0d" android:endColor="#ff09be0d" />
        </shape>
    </item>
</selector>